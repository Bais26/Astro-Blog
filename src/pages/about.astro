---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!DOCTYPE html>
<html lang="en">
<head>
	<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
<body>
	<Header/>
	<header>
		<h1 class="pt-12 text-4xl font-bold text-center">ABOUT ME</h1>
	</header>
	<section class="text-gray-600 text-xl px-12">
		<div class="container mx-auto flex md:flex-row flex-col items-center">
		  <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
			<h1 class="font-semibold sm:text-4xl text-3xl mb-4 font-medium text-gray-900">M Bais Yufan Mardiansah
			</h1>
			<p class="mb-8 leading-relaxed">Hi, I'm M Bais Yufan Mardiansah, a junior frontend developer, I am passionate about programming and currently focusing on frontend development.</p>
		  </div>
		  <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
			<img class="ml-24 object-cover object-center rounded" alt="hero" src=" /assets/bais-1-.png">
		  </div>
		</div>
	  </section>
	  <Footer />
</body>
</html>